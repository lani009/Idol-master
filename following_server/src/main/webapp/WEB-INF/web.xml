<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">



<web-app >
 

  <display-name>Following_Server</display-name>
  <servlet>
    <servlet-name>DBCPInit</servlet-name>
    <servlet-class>following_server.jdbc.DBCPInit</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>


  

  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/Login/login.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>recommend</servlet-name>
    <jsp-file>/Recommend/recommend.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>getReview</servlet-name>
    <jsp-file>/Review/Get/getReview.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>getPlaceTag</servlet-name>
    <jsp-file>/Recommend/Get/getPlaceTag.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>setReview</servlet-name>
    <jsp-file>/Review/Set/setReview.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>showTaste</servlet-name>
    <jsp-file>/Taste/Show/showTaste.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>getTaste</servlet-name>
    <jsp-file>/Taste/Get/getTaste.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>setTaste</servlet-name>
    <jsp-file>/Taste/Set/setTaste.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>recommend</servlet-name>
    <url-pattern>/recommend</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getReview</servlet-name>
    <url-pattern>/review/get</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getPlaceTag</servlet-name>
    <url-pattern>/recommend/get</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>setReview</servlet-name>
    <url-pattern>/review/set</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getTaste</servlet-name>
    <url-pattern>/taste/get</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>showTaste</servlet-name>
    <url-pattern>/taste/show</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>setTaste</servlet-name>
    <url-pattern>/taste/set</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>