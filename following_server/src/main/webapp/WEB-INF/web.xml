<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Following_Server</display-name>
  <servlet>
    <servlet-name>DBCPInit</servlet-name>
    <servlet-class>following_server.jdbc.DBCPInit</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>DAO</servlet-name>
    <servlet-class>following_server.src.main.java.following_server.Rest_Dao</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>Login.login.jsp</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getReview</servlet-name>
    <servlet-class>Review.Get.getReview.jsp</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>setReview</servlet-name>
    <servlet-class>Review.Set.setReview.jsp</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getTaste</servlet-name>
    <servlet-class>Taste.Get.getTaste.jsp</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getReview</servlet-name>
    <url-pattern>/Review/Get</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>